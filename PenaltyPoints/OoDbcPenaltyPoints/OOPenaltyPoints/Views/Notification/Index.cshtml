@model IEnumerable<OOPenaltyPoints.Models.Notification>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            NiName
        </th>
        <th>
            NiPoints
        </th>
        <th>
            NiDesc
        </th>
        <th>
            NiDate
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NiName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NiPoints)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NiDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NiDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
