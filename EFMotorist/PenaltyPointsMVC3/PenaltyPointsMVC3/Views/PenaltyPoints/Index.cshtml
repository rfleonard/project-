@model IEnumerable<PenaltyPointsMVC3.ListedOffences>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            LoName
        </th>
        <th>
            LoDesc
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LoName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoDesc)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LoId }) |
            @Html.ActionLink("Details", "Details", new { id=item.LoId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LoId })
        </td>
    </tr>
}

</table>
